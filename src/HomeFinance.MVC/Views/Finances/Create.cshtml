@model HomeFinance.Domain.Models.Finances

@{
    ViewData["Title"] = "Contas";
}


<form id="createFinancesForm" method="post">
    <div class="form-group">
        <label for="FinanceName">Nome</label>
        <input class="form-control" id="FinanceName" name="FinanceName" type="text" required />
    </div>
    <div id="installmentsContainer">
        <div class="installment">
            <label for="DueDate">vencimento</label>
            <input class="form-control" name="Installments[0].DueDate" type="date" required />

            <label for="Price">Valor R$</label>
            <input class="form-control" name="Installments[0].Price" type="number" step="0.01" required />

            <label for="TotalInstallments">Quantidade de parcelas</label>
            <input class="form-control" name="Installments[0].TotalInstallments" type="number" required />

            <label for="InstallmentsPaid">Parcelas Pagas</label>
            <input class="form-control" name="Installments[0].InstallmentsPaid" type="number" required />

           @* <label for="Paid">Paid</label>
            <input class="form-control" name="Installments[0].Paid" type="checkbox" />*@
        </div>
    </div>

    <button type="submit" class="btn btn-success">Registrar Divida</button>
</form>






