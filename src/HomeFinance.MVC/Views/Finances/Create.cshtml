@model HomeFinance.Domain.Models.Finances

@{
    ViewData["Title"] = "Contas";
}

<h1>Contas</h1>

<h4>Finances</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FinanceName" class="control-label"></label>
                <input asp-for="FinanceName" class="form-control" />
                <span asp-validation-for="FinanceName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DueDate" class="control-label"></label>
                <input asp-for="DueDate" class="form-control" asp-format="{0:dd-MM-yy}" />
                <span asp-validation-for="DueDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
          @*  <div class="form-group">
                <label asp-for="Pago" class="control-label"></label>
                <input type="checkbox" asp-for="Pago" />
                <span asp-validation-for="Pago" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar a lista completa</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
